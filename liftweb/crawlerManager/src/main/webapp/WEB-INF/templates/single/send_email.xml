<div>
  <div class="page-header">
    <h1>账户 - 发送邮件</h1>
  </div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
	<th class="width2">字段</th>
	<th>内容</th>
      </tr>
    </thead>
    <tbody id="mail_content">
      <tr>
	<th>Email Host Name</th>
	<td><input type="text" name="hostName" placeholder="smtp.googlemail.com" /></td>
      </tr>
      <tr>
	<th>Smtp Port</th>
	<td><input type="number" name="smtpPort" placeholder="465" /></td>
      </tr>
      <tr>
	<th>Username</th>
	<td><input type="text" name="username" placeholder="Gmail 账户名" /></td>
      </tr>
      <tr>
	<th>Password</th>
	<td><input type="password" name="password" placeholder="保密" /></td>
      </tr>
      <tr>
	<th>SSL?</th>
	<td><input type="checkbox" name="ssl" /></td>
      </tr>
      <tr>
	<th>From</th>
	<td><input type="text" name="from" placeholder="发送邮件地址" /></td>
      </tr>
      <tr>
	<th>Subject</th>
	<td><input type="text" name="subject" placeholder="邮件主题" /></td>
      </tr>
      <tr>
	<th>Msg</th>
	<td><textarea name="msg" placeholder="邮件消息内容" /></td>
      </tr>
      <tr>
	<th>To</th>
	<td><input type="text" name="to" placeholder="接收邮件地址" /></td>
      </tr>
      <tr>
	<th>Attachment</th>
	<td><input type="file" name="attachment" /></td>
      </tr>
    </tbody>
  </table>
  <div>
    <input type="submit" id="form_submit" />
  </div>
</div>